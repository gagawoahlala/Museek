<!doctype html>

<html>
<head>
	<title>MuSeek</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/general.css" rel="stylesheet">
	<link href="/css/question.css" rel="stylesheet">
	<link href="/css/responsive.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body style="display:none;">
	<div class="container">
		<nav class="navbar navbar-default navbar-fixed-top">
		  <div class="container-fluid">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
					<a data-toggle="modal" data-target="#exitModal" class="glyphicon glyphicon-remove" aria-hidden="true"></a>
					<span class="navbar-brand">Quiz</span>
					<a href="" style="visibility: hidden;" class="glyphicon glyphicon-remove" aria-hidden="true"></a>
		    </div>

		  </div><!-- /.container-fluid -->
		</nav>

		<div id="exitModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
			<div class="modal-dialog modal-lg">
				<div class="modal-content">
					<div class="modal-body">
						<h2>You will lost your current progress. Do you still want to continue?</h2>
					<!-- <h4>Your Laptop battery is less then 10%.Recharge the battery.</h4> -->
					</div>
						 <button id="exitButton" class="start-button universal-button">Yes</button>
				</div>
			</div>
		</div>
		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
		<!-- p means paragraph -->
		<main class="container-fluid">
			{{#each questions}}
				<div id="question{{@index}}" class="row question-hidden">
					<div class="thumbnail">
						<img class="question-picture" src={{image}} alt="">
						<div class="caption">
							<div class="question-type">
								<p>Select the right answer:</p>
							</div>
							<div class="question-description">
								<p>Which note is this?</p>
							</div>

							<div class="answer">
								{{#each options}}
									<span class="col-xs-6 col-sm-6">
									<input id="Radio{{id}}" data-val= "{{value}}" name="Radios" type="radio" value="Option {{id}}">
									<label for="Radio{{id}}">{{value}}</label>
									</span>
								{{/each}}
							</div>
							<button class="confirm-button" data-answer="{{answer}}" id="modalPop{{@index}}" data-backdrop="static" data-toggle="modal" data-target="#modal{{@index}}">Confirm Answer</button>
						</div>
					</div>
					<!-- The Modal -->
					<div id="modal{{@index}}" class="modal fade bs-example-modal-lg draggable" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
						<div class="modal-dialog modal-lg">
							<div class="modal-content">

								<div class="modal-body">

								<h2>Great Job!</h2>
								<!-- <h4>Your Laptop battery is less then 10%.Recharge the battery.</h4> -->
								</div>
								<button id="button{{@index}}" data-dismiss="modal" class="start-button universal-button">Next Question</button>

							</div>
						</div>
					</div>
				</div>

			{{/each}}
		</main>
		<!-- divs are invisible structuring elements that stack vertically by default. Use them to organize your code -->
		<!-- img tags are images. Lorem Pixel will deliver random images; handy! -->
		<!-- a are anchors, also known as hyperlinks. Use the href attribute to tell the browser where to go when the user clicks -->

	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="https://unpkg.com/draggabilly@2/dist/draggabilly.pkgd.min.js"></script>
	<!-- or -->
	<script src="https://unpkg.com/draggabilly@2/dist/draggabilly.pkgd.js"></script>
	<script src="/js/question.js"></script>
</body>
</html>
